{
  "name": "greencaps-blog",
  "version": "1.0.0",
  "description": "Official website sources",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "scss": "node-sass --output-style compressed --include-path sass sass/style.scss   static/css/style.css",
    "clean": "rimraf public",
    "build:hugo": "hugo",
    "build": "npm run clean && npm run scss && npm run build:hugo",
    "start": "hugo server",
    "deploy": "npm run build && surge --project ./public --domain greencaps.rocks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greencaps/blog.git"
  },
  "keywords": [
    "hugo",
    "static",
    "website"
  ],
  "author": "Alexander Ulizko <alexander@ulizko.com>",
  "contributors": [
    "Aceed"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greencaps/blog/issues"
  },
  "homepage": "https://github.com/greencaps/blog#readme",
  "devDependencies": {
    "hugo-bin": "^0.5.0",
    "node-sass": "^4.3.0",
    "rimraf": "^2.5.4",
    "surge": "^0.18.0"
  }
}
